<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

	<!-- <import resource="classpath:pl/com/active-mq-connection-factory.xml" 
		/> -->
	<tx:annotation-driven />
	<import resource="classpath:pl/store/database/h2.xml" />
	<import resource="classpath:pl/store/database/hibernate.xml" />

	<bean id="findBasketDao" class="pl.store.persistance.DefoultFindOrderDao">
		<property name="factory" ref="sessionFactory"></property>
	</bean>
	
	<bean id="saveNewBasketDao" class="pl.store.persistance.DefoultNewOrderDao">
		<property name="factory" ref="sessionFactory"></property>
	</bean>
	
	<bean id="updateBasketDao" class="pl.store.persistance.DefoultUpdateExistingOrderDao">
		<property name="factory" ref="sessionFactory"></property>
	</bean>
	
	<bean id="saveNewBasket" class="pl.store.business.inbound.DefoultNewOrderProcesor">
		<property name="newOrderDao" ref="saveNewBasketDao"></property>
	</bean>
</beans>